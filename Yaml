  name: ${name}
  friendly_name: ${friendly_name}
  name_add_mac_suffix: false
  project:
    name: catdognaus.NG21
    version: '1.0'

esp8266:
  board: d1_mini

# Enable logging
logger:
  baud_rate: 0

